{
  "plugins": [
    "react"
  ],

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },

  "globals": {
    "__DEV__": false,
    "__PROD__": false,
    "__DEBUG__": false,
    "styles": false
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "spaced-comment": 0,
    "comma-dangle": [2, "never"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-indent-props": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-no-bind": 0,
    "react/react-in-jsx-scope": 2,
    "react/no-multi-comp": 0,
    "react/prop-types": 0,
    "react/sort-comp": 0,
    "react/no-did-mount-set-state": 0,
    "jsx-quotes": [2, "prefer-single"],
    "block-scoped-var": 0,
    "padded-blocks": 0,
    "no-console": 1,
    "no-process-exit": 0,
    "no-unused-vars": 2,
    "no-undef": 2,
    "id-length": 0,
    "no-new": 0,
    "camelcase": [2, {"properties": "always"}],
    "no-constant-condition": 0,
    "prefer-template": 1,
    "arrow-body-style": 0,
    "max-len": [1, 120, 2]
  }
}
